<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.kickbang.Fragment.MainFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <SearchView
                android:id="@+id/SearchView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:queryHint="搜索"
                tools:ignore="InvalidId"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  用户 "
                android:textSize="36dp" />

            <android.support.v7.widget.CardView
                android:id="@+id/user_cardView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                app:cardBackgroundColor="@color/White"
                app:cardCornerRadius="24dp"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.szysky.customize.siv.SImageView
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            app:border_color="@color/colorPrimaryDark"
                            app:displayType="circle"
                            android:id="@+id/user_icon_image"
                            app:img="@drawable/touxiang1"
                            app:scaleType="fix_XY" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/main_username_textview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="  用户名："
                                android:textSize="@dimen/textsize" />

                            <TextView
                                android:id="@+id/main_uid_texiview"
                                android:layout_width="31dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="    id:"
                                android:textSize="@dimen/littlezise" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="球队" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="进球" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="助攻" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp">

                        <TextView
                            android:id="@+id/main_teamname_textview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="null"
                            android:textSize="@dimen/textsize" />

                        <TextView
                            android:id="@+id/main_goal_textview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="0"
                            android:textSize="@dimen/textsize" />

                        <TextView
                            android:id="@+id/main_ass_textview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="0"
                            android:textSize="@dimen/textsize" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/team_Title_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  球队"
                android:textSize="36dp" />

            <android.support.v7.widget.CardView
                android:id="@+id/team_cardView"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                app:cardCornerRadius="24dp"
                app:cardElevation="6dp"
                android:padding="14dp"

                app:cardUseCompatPadding="true"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <LinearLayout
                        android:id="@+id/team_linerlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.szysky.customize.siv.SImageView
                            android:id="@+id/team_icon_image"
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            app:border_color="@color/colorPrimaryDark"
                            app:displayType="circle"
                            app:img="@drawable/touxiang1"
                            app:scaleType="fix_XY" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/teamname_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" 队伍名 :" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" 创建日期 :   " />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" 球队人数 :   " />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/teamname_showview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" " />

                            <TextView
                                android:id="@+id/teamData_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="" />

                            <TextView
                                android:id="@+id/teamcount_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" " />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  球场"
                android:textSize="36dp" />

            <android.support.v7.widget.CardView
                android:id="@+id/field_cardView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_centerInParent="true"
                app:cardCornerRadius="24dp"
                android:padding="14dp"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="true">
                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/field_list"></ListView>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
